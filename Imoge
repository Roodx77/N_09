<!-- محتوى اللعبة الأساسي (مخفي حتى تختفي شاشة البداية) -->
<div id="app" class="container" style="display:none">
  <div class="box">
    <h1>09</h1>
    <p>اختر الانفعال الذي تشعر به:</p>

    <select id="emotion">
      <option value="">— اختر —</option>
      <!-- اختصرت العرض هنا لكن انسخ بقية الخيارات من ملفك الأصلي إذا تريد -->
      <option>الخوف</option>
      <option>القلق</option>
      <option>الحزن</option>
      <option>الغضب</option>
      <option>الحب</option>
      <option>الفرح</option>
      <option>التفكير</option>
      <option value="other">أخرى…</option>
    </select>

    <textarea id="custom" placeholder="اكتب ما تشعر به…" style="display:none"></textarea>

    <div id="output" class="result"></div>
  </div>
</div>

<script>
/* ضع هنا نفس كائن replies الكامل من ملفك الأصلي */
const replies = {
  "الخوف":"الخوف إشارة حماية، لا عدو.",
  "القلق":"القلق تفكير في مستقبل لم يحدث بعد.",
  "الحزن":"الحزن دليل على قيمة ما فُقد.",
  "الغضب":"الغضب طاقة لتجاوز حدودك.",
  "الحب":"الحب حضور لا يحتاج تفسير.",
  "الفرح":"الفرح لحظة امتلاء.",
  "التفكير":"التفكير محاولة للفهم.",
  "other": "لقد أدخلت شعورك: "
};

const splash = document.getElementById('splash');
const app = document.getElementById('app');
document.getElementById('startBtn').addEventListener('click', () => {
  splash.style.transition = 'opacity 350ms ease';
  splash.style.opacity = 0;
  setTimeout(() => {
    splash.style.display = 'none';
    app.style.display = 'flex';
  }, 360);
});

const emotionSelect = document.getElementById("emotion");
const customInput = document.getElementById("custom");
const output = document.getElementById("output");

function updateAnalysis() {
  const value = emotionSelect.value;
  if(value === "") {
    output.textContent = "";
    return;
  }
  if(value === "other") {
    const text = customInput.value.trim();
    output.textContent = text ? `لقد أدخلت شعورك: ${text}` : "";
  } else {
    output.textContent = replies[value] || "لاحظ شعورك بهدوء.";
  }
}

emotionSelect.onchange = () => {
  customInput.style.display = emotionSelect.value === "other" ? "block" : "none";
  updateAnalysis();
};

customInput.oninput = updateAnalysis;
</script>

</body>
